# Database
DATABASE_URL="file:./dev.db"

# ======================
# SONG DISCOVERY APIS
# ======================

# Spotify API (best source for real songs + metadata)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Last.fm API (good for popularity data by country)
LASTFM_API_KEY=your_lastfm_api_key

# ======================
# LYRICS PROVIDERS
# ======================

# Lyrics Provider (defaults to demo mode)
LYRICS_PROVIDER=demo
# Options: demo | musixmatch | genius

# Musixmatch (requires enterprise license for full lyrics)
MUSIXMATCH_API_KEY=your_musixmatch_api_key

# Genius (requires web scraping for full lyrics - not implemented)
GENIUS_API_KEY=your_genius_api_key

# ======================
# TRANSLATION SERVICES  
# ======================

# Translation Service (defaults to demo translations)
TRANSLATOR=demo
# Options: demo | libretranslate | deepl | google

# DeepL (high quality, paid)
DEEPL_API_KEY=your_deepl_api_key

# Google Translate (paid)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# LibreTranslate (free/self-hosted)
LIBRETRANSLATE_URL=https://libretranslate.com

# ======================
# DICTIONARY SERVICES
# ======================

# Dictionary Provider (defaults to built-in Spanish glossary)
DICTIONARY_PROVIDER=demo
# Options: demo | spanish-dict | wordsapi

# SpanishDict API
SPANISH_DICT_API_KEY=your_spanish_dict_api_key

# WordsAPI (English definitions)
WORDS_API_KEY=your_words_api_key

# ======================
# AUTHENTICATION
# ======================

# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Spotify OAuth for user authentication & full playback
# Note: These should be the same as above but with additional scopes
# Required scopes: streaming,user-read-email,user-read-private,user-read-playback-state,user-modify-playback-state
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret